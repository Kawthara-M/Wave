<%- include('../partials/_header.ejs') %>

<h2><%= data.first %> <%= data.last %>'s Profile</h2>
<img src="<%= data.picture %>" alt="Profile Picture" width="150" />

<div>
  <a href=<%= `../auth/${data._id}/update-password` %>>Update Password</a>
</div>

<h3>Recipes:</h3>
<ul>
  <% data.recipes.forEach(recipe => { %>
    <li><a href="/recipes/<%= recipe._id %>"><%= recipe.title %></a></li>
  <% }) %>
</ul>

<%- include('../partials/_footer.ejs') %>