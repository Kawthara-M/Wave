<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Your App</title>

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
</head>

<div class="card h-100 shadow-sm rounded-0">
  <div class="card-header bg-white border-0">
    <small class="text-muted"
      >Posted by <strong><%= post.user.username %></strong></small
    >
  </div>
            <% if (user._id === post.user._id.toString()) { %>
          <div class="dropdown">
            <a
              href="#"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
              class="text-dark text-decoration-none"
            >
              &#x22EE;
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li>
                <a class="dropdown-item" href="/posts/<%= post._id %>/edit"
                  >Edit</a
                >
              </li>
              <li>
                <form
                  action="/posts/<%= post._id %>?_method=DELETE"
                  method="POST"
                  class="d-inline"
                >
                  <button type="submit" class="dropdown-item text-danger">
                    Delete
                  </button>
                </form>
              </li>
            </ul>
          </div>
          <% } %>
  <a href="/posts/<%= post._id %>">
    <img
      src="/uploads/<%= post.picture %>"
      class="card-img-top rounded-0"
      alt="Post Image"
      style="height: 200px; object-fit: cover"
    />
  </a>
  <div class="card-body d-flex flex-column justify-content-between">
    <p class="card-text"><%= post.description %></p>

    <% if (showComments && comments) { %>
    <div class="mt-4">
      <h5>Comments</h5>
      <% if (comments.length !== 0) { %>
      <ul class="list-group">
        <% comments.forEach(comment => { %>
        <li
          class="list-group-item d-flex justify-content-between align-items-start"
        >
          <div>
            <strong><%= comment.user.username %></strong>: <%=
            comment.description %>
          </div>
          <% if (comment.user._id.toString() === user._id.toString()) { %>
          <form
            action="/posts/<%= post._id %>/comments/<%= comment._id %>?_method=DELETE"
            method="POST"
            class="ms-3 mb-0"
          >
            <button
              type="submit"
              class="btn btn-sm btn-outline-danger"
              title="Delete Comment"
            >
              <i class="bi bi-trash"></i>
            </button>
          </form>
          <% } %>
        </li>
        <% }) %>
      </ul>

      <% } else { %>
      <p class="text-muted">No comments yet. Be the first to comment!</p>
      <% } %>
    </div>
    <% } %>

    <form
      action="/posts/<%= post._id %>/favorited-by/<%= user._id %>"
      method="POST"
      class="mt-3"
    >
      <span class="likes" style="display: flex; align-items: center">
        <button type="submit" class="styled-btn btn btn-outline-danger btn-sm">
          <i class="bi bi-balloon-heart"></i>
        </button>
        <p class="mb-0 ms-2"><%= post.favorited.length %></p>
      </span>
    </form>
  </div>
</div>
