<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Password</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light">
    <%- include("../partials/header.ejs") %>
    <div class="container mt-5">
      <div class="card shadow-sm rounded-0 mx-auto" style="max-width: 500px">
        <div class="card-header bg-white">
          <h5 class="mb-0">Update Your Password</h5>
        </div>

        <div class="card-body">
          <form action="/auth/<%=user._id %>?_method=PUT" method="POST">
            <div class="mb-3">
              <label for="oldPassword" class="form-label"
                >Current Password</label
              >
              <input
                type="password"
                class="form-control"
                id="oldPassword"
                name="oldPassword"
                required
              />
            </div>

            <div class="mb-3">
              <label for="newPassword" class="form-label">New Password</label>
              <input
                type="password"
                class="form-control"
                id="newPassword"
                name="newPassword"
                required
              />
            </div>

            <div class="mb-3">
              <label for="confirmPassword" class="form-label"
                >Confirm New Password</label
              >
              <input
                type="password"
                class="form-control"
                id="confirmPassword"
                name="confirmPassword"
                required
              />
            </div>
            <span class="error" style="color: red">
              <% if(errors!=null) { errors.forEach((error)=> { %>
              <p><%= error %></p>
              <% })}%>
            </span>

            <button type="submit" class="btn btn-dark">Update Password</button>
            <a href="/users/<%= user._id %>" class="btn btn-secondary ms-2"
              >Cancel</a
            >
          </form>
        </div>
      </div>
    </div>
    <%- include("../partials/footer.ejs") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
